@model ML.Poliza
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>@ViewBag.Titulo</h3>
                <h5>Ingrese los datos</h5>
                <hr />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Poliza", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdPoliza, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.IdPoliza, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdPoliza)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NumeroPoliza, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.NumeroPoliza, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NumeroPoliza)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaCreacion, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.FechaCreacion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FechaCreacion)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaModificacion, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.FechaModificacion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FechaModificacion)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Usuario.IdUsuario, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Usuario.IdUsuario, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Usuario.IdUsuario)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SubPoliza.IdSubPoliza, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.SubPoliza.IdSubPoliza, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SubPoliza.IdSubPoliza)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@ViewBag.Accion" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-10">
            @Html.ActionLink("Regresar", "GetAll", "Poliza", htmlAttributes: new { @class = "btn btn-danger" })
        </div>
    </div>


</div>
